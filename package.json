  "repository": {
    "type": "git",
    "url": "https://github.com/thewizardplusplus/vk-group-stats.git"
  },
  "dependencies": {
    "async": "^2.1.4",
    "body-parser": "^1.16.0",
    "connect-mongo": "^1.3.2",
    "cookie-parser": "^1.4.3",
    "dotenv": "^4.0.0",
    "express": "^4.14.1",
    "express-session": "^1.15.1",
    "express-validator": "^3.1.2",
    "helmet": "^3.5.0",
    "mongoose": "^4.8.1",
    "morgan": "^1.8.0",
    "node-schedule": "^1.2.0",
    "node-vkapi": "^2.1.0",
    "passport": "^0.3.2",
    "passport-vkontakte": "^0.3.2",
    "uuid": "^3.0.1",
    "validator-js": "^0.2.1",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-polyfill": "^6.22.0",
    "babel-preset-env": "^1.1.8",
    "concurrently": "^3.3.0",
    "nodemon": "^1.11.0"
  },
  "scripts": {
    "install-server": "npm install",
    "install-client": "cd client && npm install",
    "install-all": "npm run install-server && npm run install-client",
    "build-server": "babel --out-dir=dist src",
    "build-client": "cd client && npm run build",
    "build": "npm run build-server && npm run build-client",
    "serve": "node dist/main.js",
    "server-up": "npm run install-all && npm run build && npm run serve",
    "start-server": "nodemon --exec babel-node src/main.js",
    "start-client": "cd client && npm run start",
    "start": "concurrently 'npm run start-server' 'npm run start-client'"
  },
  "babel": {
    "presets": [
      "env"
    ]
  }
}
